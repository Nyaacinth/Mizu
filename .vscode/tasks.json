{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Runner Watch",
            "type": "dart",
            "command": "dart",
            "args": [
                "run",
                "build_runner",
                "watch",
                "--delete-conflicting-outputs"
            ],
            "group": "build",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen",
                "instanceLimit": 1
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
